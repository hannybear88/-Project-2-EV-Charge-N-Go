<!-- help message -->
<div class="sub-heading d-flex flex-column align-items-center my-3">
    <h4><em>Select date and duration for reservation.</em></h2>
</div>


<div class="container d-flex flex-column">
  <div class="title px-5 pt-3 pb-2">
    <div id="info-store" data-userId={{user_id}} data-stationId={{station.id}}></div>
    <h2 id="user_info">Reservation</h2>
  </div>
{{!-- Reservation form body --}}
    <form class="reservation-form p-5">
      <div class="mb-5">
      <h4>{{station.name}}</h4>
      <h5>{{station.address}}, {{station.city}}, {{station.state}} {{station.zip}}</h5>
      <h6>Charger Type: {{station.charger_type}}</h6>
      <h6>Charger Level : {{station.level_type}}</h6>
      </div>
      <div class="mb-3">
        <label for="date-reserve" class="form-label">Date:</label>
        <input class="form-control" type="date" id="date-reserve" />
      </div>
      <div class="mb-3">
        <label for="length-reserve" class="form-label">Duration:</label>
        <input class="form-control" type="time" id="length-reserve" />
      </div>
      {{!-- <div class="form-group"> --}}
        <button class="btn btn-primary" type="submit">Reserve</button>
        {{!-- <a type="button" href="/reserve">Want to Reserve? Reserve Here!</a> --}}
      {{!-- </div> --}}
    </form>
    <div class="px-1 py-3">
  </div>
  </div>
  {{!-- <div class="col-md-6"> --}}

    <script src="/js/reservation.js"></script>