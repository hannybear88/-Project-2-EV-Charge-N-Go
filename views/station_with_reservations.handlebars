<!-- My Charging Stations -->
<div class="d-flex flex-column align-items-center mb-3">
  <a href="/newStation" class="btn btn-lg btn-primary my-3" id="btn-add-new-post">+ New Charging Station</a>
  {{#if stations.length}}
  <h1 class="sub-heading">My Charging Stations:</h1>
  <em>
    <h5 class="sub-heading">Click the Station Name below to see the associated reservations.</h5>
  </em>
  {{else}}
  <em>
    <h5 class="sub-heading">You haven't had any Charging Station registered yet!</h5>
  </em>
  <em>
    <h5 class="sub-heading">Create one by clicking the above button!</h5>
  </em>
  {{/if}}
</div>
{{!-- render if stations are not empty --}}
{{#if stations.length}}
  {{!-- Loop over each object in the stations array --}}
  {{#each stations as |station| }}
  <div class="row mb-3">
    <div class="col">
      <!-- charging station name -->
      <a class="text-decoration-none" href="/api/stations/{{station.id}}">
        <div class="station-title px-3 pt-3 pb-2 d-flex justify-content-between align-items-end flex-wrap ">
          <h3>{{station.name}}</h3>
        </div>
      </a>
      <!-- Charging station details -->
      <div class="station-details px-3 py-2">
        <p>Address: {{station.address}}, {{station.city}}, {{station.state}} {{station.zip}}</p>
        <p>Charger Type: {{station.charger_type}}</p>
        <p>Charger Level: {{station.level_type}}</p>
      </div>
    </div>
  </div>
  {{/each}}
{{/if}}