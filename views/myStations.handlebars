<!-- My Charging Stations -->
<div class="d-flex flex-column align-items-center my-3">
  {{#if stations.length}}
  <h1 class="sub-heading">My Charging Stations:</h1>
  {{else}}
  <em>
    <h5 class="sub-heading">You haven't had any Charging Station registered yet!</h5>
  </em>
  <em>
    <h5 class="sub-heading">Create one on the Home page!</h5>
  </em>
  {{/if}}
</div>
{{!-- render if stations are not empty --}}
{{#if stations.length}}
  {{!-- Loop over each object in the stations array --}}
  {{#each stations as |station| }}
  <div class="row mb-3">
    <div class="col">
      <!-- charging station name -->
      <div class="station-title px-3 pt-3 pb-2 d-flex justify-content-between align-items-end flex-wrap ">
        <h3>{{station.name}}</h3>
      </div>
      <!-- Charging station details -->
      <div class="station-details px-3 py-2">
        <p>Address: <span class="fw-bold">{{station.address}}, {{station.city}}, {{station.state}} {{station.zip}}</span></p>
        <p>Station Type: <span class="fw-bold">{{station.station_type}}</span></p>
        <p>Plug-in Type: <span class="fw-bold">{{station.plug_in_type}}</span></p>
      </div>
    </div>
  </div>
  {{/each}}
{{/if}}